import os 

notas: float = 0
soma: float = 0
quantidadeNotas = 0
opcao = "S"


# Solicitando ao usuário através de códigos
#opcao = opcao.upper()
while opcao == "S":
    notas = float(input("\nDigite uma nota: "))

    soma += notas
    quantidadeNotas += 1
    media = soma/quantidadeNotas

    print("==== MENU ====")
    print("S - Inserir um nota")
    print("P - Ver quantas notas foram inseridas")
    print("N - Calcular média aritmética")

    opcao = input("\nInsira sua opção: ")
    
    if opcao == "P":
        print(f"A quantidade de notas foi :{quantidadeNotas}")
    elif opcao == "N":
        print(f"A media dos numeros foi :{media}")


    
